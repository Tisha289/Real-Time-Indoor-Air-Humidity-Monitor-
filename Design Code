#include <Wire.h>
#include <Adafruit_GFX.h>
#include<Adafruit_SSD1306.h>
#include<DHT.h>

//define oled screen
#define SCREEN_WIDTH 128
#define SCREEN_HEIGHT 64
#define SCREEN_ADDR 0x3c
#define OLED_RESET -1    
#define SDA_PIN 22
#define SCL_PIN 23
Adafruit_SSD1306 display(SCREEN_WIDTH,SCREEN_HEIGHT, &Wire,OLED_RESET);

//Define sensor's pin
#define DHTPIN 4
#define DHTTYPE DHT22
DHT dht(DHTPIN, DHTTYPE);

//Define pin of buzzer
#define BUZZER_PIN 5

void setup() {
  Serial.begin(115200);            // Start serial monitor
  Wire.begin(SDA_PIN,SCL_PIN);
  dht.begin();    //Initialize dht sensor
  pinMode(BUZZER_PIN,OUTPUT); //buzzer pin as output
  // Initialize the display
if(!display.begin(SSD1306_SWITCHCAPVCC,SCREEN_ADDR)) {
Serial.println(F("SSD1306 allocation failed"));
while (true);
}
  display.clearDisplay();  //clear the display
  display.setTextSize(1);   //Set the size of text
  display.setTextColor(SSD1306_WHITE);  //text color is white
  display.setCursor(0, 0);
  display.print("Air Quality Monitor");
  display.display();
  delay(2000);
}
void loop(){
  float temperature = dht.readTemperature();
  float humidity = dht.readHumidity();
   delay(2000);
 if (isnan(temperature) || isnan(humidity)) {
    Serial.println("Failed to read from DHT sensor!");
    return;
  }

  bool poorAir = (temperature>35 || humidity >50);


  display.clearDisplay();  //clear the display
  //To display temperature
  display.setCursor(0, 0);
  display.print("Temperature");
  display.print(temperature);
  display.print("Â°C");
  
  //To display humidity
  display.setCursor(0, 16);
  display.print("Humidity");
  display.print(humidity);
  display.print("%");


  if(poorAir){
  display.setCursor(0, 32);
    display.print("Air Quality:Poor");
    digitalWrite(BUZZER_PIN, HIGH);  //turn on buzzer
  }
  else{
  display.setCursor(0, 32);
     display.print("Air Quality:Good");
    digitalWrite(BUZZER_PIN, LOW);  //turn off buzzer
  }
  display.display();
  delay(3000);
   
Serial.print("Temp: "); 
Serial.print(temperature);
  Serial.print(" C, Humidity: ");
   Serial.print(humidity);
  Serial.print(" %, Status: ");
  Serial.println(poorAir ? "Poor" : "Good");
}
